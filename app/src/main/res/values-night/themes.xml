<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BasicArchitecture" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryVariant">@color/colorDarkPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorDarkOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorDarkSecondary</item>
        <item name="colorSecondaryVariant">@color/colorDarkSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorDarkOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorButtonStroke">@color/white</item>
        <item name="colorInputTextBackground">@color/black</item>
    </style>
</resources>